{
  "name": "equate8",
  "main": "main.js",
  "version": "0.3.0",
  "author": "Cinq-Mars Media",
  "homepage": "https://cinqmarsmedia.com/",
  "appId": "com.cinqmarsmedia.Equate8",
  "productName": "Equate8",
  "copyright": "Copyright © 2025 Cinq-Mars Media",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --host 0.0.0.0",
    "build": "ng build --configuration production --build-optimizer --output-hashing=all",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "build-mac": "env CSC_LINK='./newCert.p12' npx electron-builder -m --config.compression=maximum"
  },
  "build": {
    "files": [
      "!node_modules",
      "www/**/*",
      "main.js",
      "preload.js"
    ],
    "npmRebuild": false,
    "appId": "com.cinqmarsmedia.equate8",
    "productName": "Equate8",
    "copyright": "Copyright © 2025 Cinq-Mars Media",
    "asar": true,
    "win": {
      "target": [
        "zip"
      ],
      "icon": "build/icons/output.ico"
    },
    "appx": {
      "applicationId": "com.cinqmarsmedia.equate8",
      "backgroundColor": "#00909D",
      "displayName": "Equate8",
      "publisher": "CN=3C4EAD44-31E0-426D-87D9-11C445F2CBF1",
      "publisherDisplayName": "Cinq-Mars Media",
      "identityName": "Cinq-MarsMedia.Equate8"
    },
    "mac": {
      "icon": "build/icons/1024x1024.png",
      "category": "public.app-category.games",
      "hardenedRuntime": true,
      "entitlements": "./build/entitlements.mac.inherit.plist",
      "target": [
        {
          "target": "dir",
          "arch": "universal"
        }
      ],
      "type": "distribution"
    },
    "linux": {
      "target": [
        "zip",
        "AppImage",
        "deb"
      ],
      "icon": "build/icons",
      "maintainer": "Cinq-Mars Media, info@cinqmarsmedia.com"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^14.0.0",
    "@angular/core": "^14.0.0",
    "@angular/forms": "^14.0.0",
    "@angular/platform-browser": "^14.0.0",
    "@angular/platform-browser-dynamic": "^14.0.0",
    "@angular/router": "^14.0.0",
    "@capacitor/app": "1.1.1",
    "@capacitor/core": "3.6.0",
    "@capacitor/haptics": "1.1.4",
    "@capacitor/keyboard": "1.2.3",
    "@capacitor/status-bar": "1.0.8",
    "@electron/notarize": "^3.0.1",
    "@ionic/angular": "^6.1.9",
    "@ionic/storage": "^3.0.6",
    "@ionic/storage-angular": "^3.0.6",
    "dupligit": "^1.0.2",
    "hammerjs": "^2.0.8",
    "howler": "^2.2.3",
    "lottie-web": "^5.12.2",
    "mathjs": "^11.0.1",
    "ngx-lottie": "^9.1.0",
    "rxjs": "~6.6.0",
    "tslib": "^2.2.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.0.0",
    "@angular-eslint/builder": "~13.0.1",
    "@angular-eslint/eslint-plugin": "~13.0.1",
    "@angular-eslint/eslint-plugin-template": "~13.0.1",
    "@angular-eslint/template-parser": "~13.0.1",
    "@angular/cli": "^14.0.0",
    "@angular/compiler": "^14.0.0",
    "@angular/compiler-cli": "^14.0.0",
    "@angular/language-service": "^14.0.0",
    "@capacitor/cli": "3.6.0",
    "@ionic/angular-toolkit": "^6.0.0",
    "@types/hammerjs": "^2.0.46",
    "@types/jasmine": "~3.6.0",
