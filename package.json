  "cordova": {
    "platforms": [
      "android",
      "ios"
    ],
    "plugins": {
      "cordova-plugin-inappbrowser": {},
      "cordova-plugin-purchase": {},
      "cordova-plugin-exit": {}
    }
  }
}
